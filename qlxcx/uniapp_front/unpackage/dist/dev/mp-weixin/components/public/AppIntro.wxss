
.app-intro {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 40rpx;
}
.logo {
    width: 200rpx;
    height: 200rpx;
    margin-bottom: 20rpx;
}
.app-name {
    font-size: 48rpx;
    font-weight: bold;
    color: #333;
    margin-bottom: 20rpx;
}
.description {
    font-size: 32rpx;
    color: #666;
    text-align: center;
    margin-bottom: 60rpx;
}
.features {
    width: 100%;
}
.feature-item {
    margin-bottom: 40rpx;
    text-align: center;
}
.feature-title {
    font-size: 36rpx;
    color: #333;
    font-weight: bold;
    margin-bottom: 10rpx;
    display: block;
}
.feature-desc {
    font-size: 28rpx;
    color: #666;
    display: block;
}
