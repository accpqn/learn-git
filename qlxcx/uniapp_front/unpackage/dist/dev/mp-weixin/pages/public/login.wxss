.login-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #FF69B4 0%, #FFB6C1 50%, #FFC0CB 100%);
  position: relative;
  overflow: hidden;
}

/* 顶部装饰 */
.header-decoration {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 300rpx;
  overflow: hidden;
}
.header-decoration .decoration-circle {
  position: absolute;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.1);
}
.header-decoration .decoration-circle.circle-1 {
  width: 200rpx;
  height: 200rpx;
  top: -100rpx;
  right: -50rpx;
  animation: float 6s ease-in-out infinite;
}
.header-decoration .decoration-circle.circle-2 {
  width: 150rpx;
  height: 150rpx;
  top: 50rpx;
  left: -75rpx;
  animation: float 8s ease-in-out infinite reverse;
}
.header-decoration .decoration-circle.circle-3 {
  width: 100rpx;
  height: 100rpx;
  top: 150rpx;
  right: 100rpx;
  animation: float 10s ease-in-out infinite;
}

/* 应用介绍区域 */
.app-intro-section {
  text-align: center;
  padding: 120rpx 40rpx 60rpx;
  color: white;
}
.app-intro-section .app-logo {
  font-size: 120rpx;
  margin-bottom: 20rpx;
  animation: heartbeat 2s ease-in-out infinite;
}
.app-intro-section .app-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}
.app-intro-section .app-subtitle {
  font-size: 28rpx;
  opacity: 0.9;
  font-weight: 300;
}

/* 登录区域 */
.login-section {
  flex: 1;
  padding: 0 40rpx 40rpx;
}
.login-card {
  background: white;
  border-radius: 40rpx;
  padding: 60rpx 40rpx;
  box-shadow: 0 20rpx 60rpx rgba(0, 0, 0, 0.1);
  animation: slideUp 0.6s ease-out;
}

/* 模式切换器 */
.login-mode-switcher {
  display: flex;
  background: #F8F9FA;
  border-radius: 50rpx;
  padding: 8rpx;
  margin-bottom: 60rpx;
}
.login-mode-switcher .mode-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  border-radius: 42rpx;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
}
.login-mode-switcher .mode-item .mode-icon {
  font-size: 32rpx;
  margin-bottom: 8rpx;
}
.login-mode-switcher .mode-item .mode-text {
  font-size: 24rpx;
  color: #666;
  font-weight: 500;
}
.login-mode-switcher .mode-item.active {
  background: linear-gradient(135deg, #FF69B4, #FF1493);
  box-shadow: 0 8rpx 20rpx rgba(255, 105, 180, 0.3);
  transform: translateY(-2rpx);
}
.login-mode-switcher .mode-item.active .mode-text {
  color: white;
}

/* 表单区域 */
.login-form {
  margin-bottom: 60rpx;
}
.input-group {
  position: relative;
  margin-bottom: 40rpx;
}
.input-group .input-icon {
  position: absolute;
  left: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  font-size: 32rpx;
  z-index: 2;
}
.input-group .input {
  width: 100%;
  height: 100rpx;
  background: #F8F9FA;
  border: 2rpx solid transparent;
  border-radius: 50rpx;
  padding: 0 40rpx 0 80rpx;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  transition: all 0.3s ease;
}
.input-group .input:focus {
  background: white;
  border-color: #FF69B4;
  box-shadow: 0 0 0 6rpx rgba(255, 105, 180, 0.1);
}
.input-group.code-group .code-input {
  padding-right: 200rpx;
}
.input-group.code-group .code-btn {
  position: absolute;
  right: 10rpx;
  top: 10rpx;
  height: 80rpx;
  padding: 0 30rpx;
  background: linear-gradient(135deg, #FF69B4, #FF1493);
  color: white;
  border: none;
  border-radius: 40rpx;
  font-size: 24rpx;
  font-weight: 500;
  transition: all 0.3s ease;
}
.input-group.code-group .code-btn:not(.disabled):active {
  transform: scale(0.95);
}
.input-group.code-group .code-btn.disabled {
  background: #E9ECEF;
  color: #ADB5BD;
}
.placeholder {
  color: #ADB5BD;
}

/* 登录按钮 */
.login-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #FF69B4, #FF1493);
  border: none;
  border-radius: 50rpx;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 10rpx 30rpx rgba(255, 105, 180, 0.4);
  transition: all 0.3s ease;
  margin-bottom: 40rpx;
}
.login-btn .btn-text {
  display: block;
}
.login-btn:not(.disabled):active {
  transform: translateY(2rpx);
  box-shadow: 0 5rpx 15rpx rgba(255, 105, 180, 0.4);
}
.login-btn.disabled {
  opacity: 0.6;
  box-shadow: 0 5rpx 15rpx rgba(255, 105, 180, 0.2);
}
.login-btn::after {
  border: none;
}

/* 注册链接 */
.register-link {
  text-align: center;
}
.register-link .register-text {
  font-size: 28rpx;
  color: #666;
}
.register-link .register-btn {
  color: #FF69B4;
  font-size: 28rpx;
  font-weight: 500;
  margin-left: 10rpx;
  text-decoration: none;
}
.register-link .register-btn:active {
  opacity: 0.7;
}

/* 底部装饰 */
.footer-decoration {
  text-align: center;
  padding: 40rpx;
}
.footer-decoration .heart-icon {
  font-size: 40rpx;
  animation: heartbeat 2s ease-in-out infinite;
  opacity: 0.8;
}

/* 动画效果 */
@keyframes float {
0%, 100% {
    transform: translateY(0);
}
50% {
    transform: translateY(-20rpx);
}
}
@keyframes heartbeat {
0%, 100% {
    transform: scale(1);
}
50% {
    transform: scale(1.1);
}
}
@keyframes slideUp {
from {
    opacity: 0;
    transform: translateY(60rpx);
}
to {
    opacity: 1;
    transform: translateY(0);
}
}